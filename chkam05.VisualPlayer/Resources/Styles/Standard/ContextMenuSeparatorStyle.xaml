<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="ContextMenuSeparatorDataTemplate" TargetType="{x:Type Separator}">

        <Border
            Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}"
            Height="1"
            Opacity="0.75"
            SnapsToDevicePixels="True"/>

    </ControlTemplate>

    <Style x:Key="ContextMenuSeparatorStyle" TargetType="{x:Type Separator}">
        <Setter Property="Background" Value="#80FFFFFF"/>
        <Setter Property="BorderBrush" Value="{x:Null}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="0,2"/>
        <Setter Property="Template" Value="{StaticResource ContextMenuSeparatorDataTemplate}"/>
    </Style>

</ResourceDictionary>