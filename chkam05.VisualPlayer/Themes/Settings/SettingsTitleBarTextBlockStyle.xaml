<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:config="clr-namespace:chkam05.VisualPlayer.Data.Configuration">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Themes/Settings/SettingsBaseTextBlockStyle.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <x:Static x:Key="ConfigManager" Member="config:ConfigManager.Instance" />

    <Style x:Key="SettingsTitleBarTextBlockStyle" BasedOn="{StaticResource SettingsBaseTextBlockStyle}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="16,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>