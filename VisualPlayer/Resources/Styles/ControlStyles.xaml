<ResourceDictionary
    xmlns:Components="clr-namespace:chkam05.VisualPlayer.Components"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style
        x:Key="ControlButtonStyle"
        BasedOn="{StaticResource MaterialDesignRaisedButton}"
        TargetType="Components:ControlButton">

        <Setter Property="Background" Value="{StaticResource DefaultBackgroundBrush}"/>
        <Setter Property="BackgroundPressedBrush" Value="#40000000"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="ForegroundPressedBrush" Value="#EFEFEF"/>
        <Setter Property="Margin" Value="2,4"/>
        <Setter Property="MaxWidth" Value="54"/>
    </Style>

    <Style
        x:Key="ControlSeparatorStyle"
        TargetType="Separator">

        <Setter Property="Background" Value="{x:Null}"/>
        <Setter Property="Width" Value="8"/>
    </Style>

</ResourceDictionary>