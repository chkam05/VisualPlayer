<UserControl 
    x:Class="chkam05.VisualPlayer.Components.BorderedPasswordBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:chkam05.VisualPlayer.Components"
    mc:Ignorable="d" 
    
    d:DesignHeight="40"
    d:DesignWidth="256"
    Foreground="White">

    <Border
        x:Name="ContentBorder"
        Background="#10FFFFFF"
        BorderBrush="#40000000"
        BorderThickness="1"
        CornerRadius="4"
        HorizontalAlignment="Stretch"
        Margin="0,0,0,0"
        VerticalAlignment="Stretch">

        <PasswordBox
            x:Name="InputPasswordBox"
            Background="{x:Null}"
            BorderBrush="{x:Null}"
            BorderThickness="0"
            Grid.Column="0"
            HorizontalAlignment="Stretch"
            Margin="4,4,4,4"
            Password=""
            PasswordChar="●"
            VerticalAlignment="Center"
            PasswordChanged="InputPasswordBox_PasswordChanged"
            GotFocus="InputPasswordBox_GotFocus"
            LostFocus="InputPasswordBox_LostFocus"/>

    </Border>
    
</UserControl>
