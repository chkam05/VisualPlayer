<UserControl
    x:Class="chkam05.VisualPlayer.Components.TrackSlider"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:chkam05.VisualPlayer.Components"
    mc:Ignorable="d" 
    
    d:DesignHeight="30"
    d:DesignWidth="800"
    
    Loaded="UserControl_Loaded"
    SizeChanged="UserControl_SizeChanged">

    <Border
        x:Name="ComponentBorder"
        Background="#10FFFFFF"
        BorderBrush="{x:Null}"
        BorderThickness="0"
        CornerRadius="4"
        MouseDown="ComponentBorder_MouseDown">

        <Canvas
            x:Name="ContentCanvas"
            Background="{x:Null}"
            MouseMove="ContentCanvas_MouseMove">

            <Border
                x:Name="Handler"
                Background="{StaticResource DefaultBackgroundBrush}"
                BorderBrush="{x:Null}"
                BorderThickness="0"
                Canvas.Left="4"
                Canvas.Top="4"
                CornerRadius="4"
                Height="22"
                Width="48" MouseDown="Handler_MouseDown" MouseUp="Handler_MouseUp"/>

        </Canvas>
            
    </Border>
    
</UserControl>
