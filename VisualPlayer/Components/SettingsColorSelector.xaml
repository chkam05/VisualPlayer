                    ToolTipService.Placement="Mouse"
                    MouseUp="ColorBorder_MouseUp"/>

                <Border
                    Background="#BF0077"
                    Style="{StaticResource ThemeColorBorderStyle}"
                    ToolTipService.ToolTip="Plum"
                    ToolTipService.Placement="Mouse"
                    MouseUp="ColorBorder_MouseUp"/>

                <Border
                    Background="#C239B3"
                    Style="{StaticResource ThemeColorBorderStyle}"
                    ToolTipService.ToolTip="Light Orchid"
                    ToolTipService.Placement="Mouse"
                    MouseUp="ColorBorder_MouseUp"/>

                <Border
                    Background="#9A0089"
                    Style="{StaticResource ThemeColorBorderStyle}"
                    ToolTipService.ToolTip="Orchid"
                    ToolTipService.Placement="Mouse"
                    MouseUp="ColorBorder_MouseUp"/>

                <Line
                    Style="{StaticResource ThemeColorLineStyle}"
