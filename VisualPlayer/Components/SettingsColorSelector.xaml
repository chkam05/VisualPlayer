<UserControl
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
    x:Class="chkam05.VisualPlayer.Components.SettingsColorSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:Components="clr-namespace:chkam05.VisualPlayer.Components" 
    mc:Ignorable="d" 
    
    Height="auto"
    d:DesignWidth="800"
    
    Foreground="White"
    Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <ResourceDictionary>

            <!-- Styles imported from other resource files. -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/SettingsStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel
        x:Name="ContentStackPanel"
        Orientation="Vertical">

        <StackPanel
            x:Name="UsedColorsStackPanel"
            Margin="0,0,0,16"
            Orientation="Vertical">
        
            <TextBlock
                x:Name="UsedColorsTextBlock"
                Margin="0,0,0,8"
                Text="Used colors:"/>

            <WrapPanel
                x:Name="UsedColorsWrapPanel"
                Margin="0,0,0,0"
                Orientation="Horizontal">

                <Border
                    x:Name="UsedColor01Border"
                    Background="{StaticResource DefaultBackgroundBrush}"
                    Style="{StaticResource ThemeColorBorderStyle}"
                    MouseUp="ColorBorder_MouseUp"/>

                <Border
                    x:Name="UsedColor02Border"
                    Background="{x:Null}"
                    Style="{StaticResource ThemeColorBorderStyle}"
                    MouseUp="ColorBorder_MouseUp"/>

                <Border
                    x:Name="UsedColor03Border"
                    Background="{x:Null}"
                    Style="{StaticResource ThemeColorBorderStyle}"
                    MouseUp="ColorBorder_MouseUp"/>

                <Border
                    x:Name="UsedColor04Border"
                    Background="{x:Null}"
                    Style="{StaticResource ThemeColorBorderStyle}"
                    MouseUp="ColorBorder_MouseUp"/>

                <Border
                    x:Name="UsedColor05Border"
                    Background="{x:Null}"
                    Style="{StaticResource ThemeColorBorderStyle}"
                    MouseUp="ColorBorder_MouseUp"/>

            </WrapPanel>

        </StackPanel>

        <StackPanel
            x:Name="PalleteColorsStackPanel"
            Margin="0,0,0,16"
            Orientation="Vertical">

            <TextBlock
                x:Name="PalleteColorsTextBlock"
                Margin="0,0,0,8"
                Text="Colors pallete:"/>

            <WrapPanel
                x:Name="PalleteColorsWrapPanel"
                Margin="0,0,0,0"
                Orientation="Horizontal">

                <Border
                    Background="#FFB900"
                    Style="{StaticResource ThemeColorBorderStyle}"
                    ToolTipService.ToolTip="Yellow Gold"
                    ToolTipService.Placement="Mouse"
                    MouseUp="ColorBorder_MouseUp"/>

                <Border
                    Background="#FF8C00"
                    Style="{StaticResource ThemeColorBorderStyle}"
                    ToolTipService.ToolTip="Gold"
                    ToolTipService.Placement="Mouse"
                    MouseUp="ColorBorder_MouseUp"/>

                <Border
                    Background="#F7630C"
                    Style="{StaticResource ThemeColorBorderStyle}"
                    ToolTipService.ToolTip="Bright Orange"
                    ToolTipService.Placement="Mouse"
                    MouseUp="ColorBorder_MouseUp"/>

                <Border
                    Background="#CA5010"
                    Style="{StaticResource ThemeColorBorderStyle}"
                    ToolTipService.ToolTip="Dark Orange"
                    ToolTipService.Placement="Mouse"
                    MouseUp="ColorBorder_MouseUp"/>

                <Border
                    Background="#DA3B01"
                    Style="{StaticResource ThemeColorBorderStyle}"
                    ToolTipService.ToolTip="Rusty"
                    ToolTipService.Placement="Mouse"
                    MouseUp="ColorBorder_MouseUp"/>

                <Border
                    Background="#EF6950"
                    Style="{StaticResource ThemeColorBorderStyle}"
                    ToolTipService.ToolTip="Pale Rusty"
                    ToolTipService.Placement="Mouse"
                    MouseUp="ColorBorder_MouseUp"/>

                <Border
                    Background="#D13438"
                    Style="{StaticResource ThemeColorBorderStyle}"
                    ToolTipService.ToolTip="Brick Red"
                    ToolTipService.Placement="Mouse"
                    MouseUp="ColorBorder_MouseUp"/>

                <Border
                    Background="#FF4343"
                    Style="{StaticResource ThemeColorBorderStyle}"
                    ToolTipService.ToolTip="Moderate Red"
                    ToolTipService.Placement="Mouse"
                    MouseUp="ColorBorder_MouseUp"/>

                <Line
                    Style="{StaticResource ThemeColorLineStyle}"
                    Width="{Binding ActualWidth, ElementName=ContentStackPanel}"/>

                <Border
                    Background="#E64856"
                    Style="{StaticResource ThemeColorBorderStyle}"
                    ToolTipService.ToolTip="Pale Red"
                    ToolTipService.Placement="Mouse"
                    MouseUp="ColorBorder_MouseUp"/>

                <Border
                    Background="#E81123"
                    Style="{StaticResource ThemeColorBorderStyle}"
                    ToolTipService.ToolTip="Red"
                    ToolTipService.Placement="Mouse"
                    MouseUp="ColorBorder_MouseUp"/>

                <Border
                    Background="#EA005E"
                    Style="{StaticResource ThemeColorBorderStyle}"
                    ToolTipService.ToolTip="Light Pink"
                    ToolTipService.Placement="Mouse"
                    MouseUp="ColorBorder_MouseUp"/>

                <Border
                    Background="#C30052"
                    Style="{StaticResource ThemeColorBorderStyle}"
                    ToolTipService.ToolTip="Pink"
                    ToolTipService.Placement="Mouse"
                    MouseUp="ColorBorder_MouseUp"/>

                <Border
                    Background="#E3008C"
                    Style="{StaticResource ThemeColorBorderStyle}"
